server {
    listen 80;
    server_name stats.polytunnel.gsej.co.uk;

    location / {
        proxy_pass https://localhost:8080; # Forward traffic to port 8080
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }
}

server {
    listen 443;
    server_name stats.polytunnel.gsej.co.uk;

    location / {
        proxy_pass https://localhost:8080; # Forward traffic to port 8081
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }
}
