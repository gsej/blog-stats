stream {
  upstream stats_backend {
    server 127.0.0.1:8080;
  }

  server {
    listen 80;
    server_name stats.polytunnel.gsej.co.uk;
    
    proxy_pass stats_backend;
    proxy_ssl on;
    proxy_ssl_server_name on;
  }

  server {
    listen 443;
    server_name stats.polytunnel.gsej.co.uk;
    
    proxy_pass stats_backend;
    proxy_ssl on;
    proxy_ssl_server_name on;
  }
}
